OPTIMISE=1
MULTI_THREAD=1
USE_FREETYPE=1
STATIC=1

FLAGS = -DUSE_C -fno-delete-null-pointer-checks -fno-strict-aliasing -std=c++11

SDL2_CONFIG=x86_64-w64-mingw32-pkg-config sdl2
FREETYPE_CONFIG=x86_64-w64-mingw32-pkg-config freetype2
